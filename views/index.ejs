<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Book Review App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addBook">Add new book</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Books To Review</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Book Title</th>
          <th width="100">Book Cover</th>
          <th width="50">Author</th>
          <th width="50">Genre</th>
          <th width="50">Publish Date</th>
          <th width="50">Add Review</th>
          <th width="50">All Reviews</th>
          <th width="50">Edit Book</th>
          <th width="50">Delete Book</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < books.length; i++) { %>
          <tr>
            <td><a href="/book/<%= books[i].bookId %>"><%= books[i].bookTitle %></a></td>
            <td><img src="/imagesbooks/<%= books[i].image %>" width="20%" alt="Book Image"></td>
            <td><%= books[i].author %></td>
            <td><%= books[i].genre %></td>
            <td><%= new Date(books[i].publishedDate).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
            <td><a href="/book/<%= books[i].bookId %>/addReview">Add Review</a></td>
            <td><a href="/book/<%= books[i].bookId %>/reviews">All Reviews </a></td>
            <td><a href="/updateBook/<%= books[i].bookId %>">Edit</a></td>  
            <td><a href="/deleteBook/<%= books[i].bookId %>" onclick="return confirm('Are you sure you want to delete this book?');">Delete Book</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>


