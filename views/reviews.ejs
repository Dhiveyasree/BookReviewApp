<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Book Reviews</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Book Review App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addBook">Add new book</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>All Reviews For This Book</h2></div>
    <br>
    <% if (reviews.length > 0) { %>
        <% reviews.forEach(function(review) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= review.reviewerName %></h5>
                    <p class="card-text"><%= review.reviewText %></p>
                    <p class="card-text">Date Last Edited: <%= new Date(review.lastEdited).toLocaleDateString('en-GB') %></p>
                    <a href="/updateReview/<%= review.reviewId %>" class="btn btn-primary">Edit Review</a>
                    <a href="/deleteReview/<%= review.reviewId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete Review</a>
                </div>
            </div>
            <br>
        <% }) %>
    <% } else { %>
        <p>No reviews found</p>
    <% } %>
  </div>
</body>
</html>

