<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Edit Review</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Book Review App</a>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Edit Book</h2></div>
    <br>
    <!-- Form to edit a book -->
    <form action="/updateBook/<%= book.bookId %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <!-- Input for Book Name -->
        <label for="bookTitle">Book Title:</label>
        <input type="text" class="form-control" id="bookTitle" name="bookTitle" value="<%= book.bookTitle %>" required>
      </div>

      <div class="mb-3">
        <!-- Input for author -->
        <label for="author">Author:</label>
        <input type="text" class="form-control" id="author" name="author" value="<%= book.author %>" required>
      </div>

      <div class="mb-3">
        <!-- Input for genre -->
        <label for="genre">Genre:</label>
        <input type="text" class="form-control" id="genre" name="genre" value="<%= book.genre %>" required>
      </div>

      <div class="mb-3">
        <!-- Input for last publish date -->
        <label for="publishedDate">Date Published:</label>
        <input type="date" class="form-control" id="publishedDate" name="publishedDate" value="<%= book.publishedDate.toISOString().substr(0, 10) %>" required>
      </div>

      <div class="mb-3">
        <!-- Display Current Image -->
        <label for="currentImage">Current Image:</label><br>
        <img src= "/imagesbooks/<%= book.image %>" width="200" alt="Current Image">
        <input type="hidden" name="currentImage" value="<%= book.image %>">
        <small><em>Note: Upload a new image if desired.</em></small>
      </div>
      
      <div class="mb-3">
        <!--  New Image Input -->
        <label for="image">New Image:</label>
        <input type="file" class="form-control" id="image" name="image">
      </div>

      <!-- Button to submit the form -->
      <button type="submit" class="btn btn-primary">Update Book</button>
    </form>
  </div>
</body>
</html>

