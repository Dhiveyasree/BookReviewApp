<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Edit Review</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Book Review App</a>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Edit Review</h2></div>
    <br>
    <!-- Form to edit a book -->
    <form action="/updateReview/<%= review.reviewId %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <!-- Input for reviewerName -->
        <label for="reviewerName">Reviewer Name:</label>
        <input type="text" class="form-control" id="reviewerName" name="reviewerName" value="<%= review.reviewerName %>" required>
      </div>

      <div class="mb-3">
        <!-- Input for review text -->
        <label for="reviewText">Review Text:</label>
        <input type="text" class="form-control" id="reviewText" name="reviewText" value="<%= review.reviewText %>" required>
      </div>

      <div class="mb-3">
        <!-- Input for last edited date -->
        <label for="lasteEdited">Last Edited Date:</label>
        <input type="date" class="form-control" id="lasteEdited" name="lastEdited" value="<%= review.lastEdited.toISOString().substr(0, 10) %>" required>
      </div>

      <!-- Button to submit the form -->
      <button type="submit" class="btn btn-primary">Update Review</button>
    </form>
  </div>
</body>
</html>

